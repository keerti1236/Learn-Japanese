<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.learnjapanese">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JapNew">
        <activity android:name="com.example.android.learnjapanese.FamilyActivity"
            android:label="Family Members" />
        <activity android:name="com.example.android.learnjapanese.ColorsActivity"
            android:label="Colors" />
        <activity android:name="com.example.android.learnjapanese.PhrasesActivity"
            android:label="Phrases" />
        <activity android:name="com.example.android.learnjapanese.NumbersActivity"
                  android:label="Numbers"/>
        <activity android:name="com.example.android.learnjapanese.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>